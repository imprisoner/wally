mixin product-card(data={})
  div.product-card
    figure.product-card__figure
     img(src= data.image).product-card__image
    h3.product-card__title= data.title
    p.product-card__quantity от #{data.quantity}
    p.product-card__price.price от #{data.price}
    button(type="button").product-card__button.button Купить